<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookLibrary.Views.AddBook">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Scan" Clicked="OnScan_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <!--<Label Text="Tile" />-->
                <Entry Text="{Binding Book.Title}" Placeholder="Tile" />
                <!--<Label Text="Author" />-->
                <Entry Text="{Binding Book.Author}" Placeholder="Author" />


                <Label Text="Description:" FontSize="Medium" />
                <Editor Text="{Binding Book.Description}" />
                <!--<Label Text="Series:" FontSize="Medium" />-->
                <Entry Text="{Binding Book.Series}" Placeholder="Series"/>
                <!--<Label Text="Genre:" FontSize="Medium" />-->
                <Entry Text="{Binding Book.Genre}" Placeholder="Genre" />
                <!--<Label Text="Category:" FontSize="Medium" />-->
                <Entry Text="{Binding Book.Category}" Placeholder="Category"/>
                <Label Text="EBook:" FontSize="Medium" />
                <!--<Entry Text="{Binding Book.IsEBook}"/>-->

                <Switch IsToggled="{Binding Book.IsEBook}"></Switch>
                
                <Button Text="Save" Clicked="OnCreateClicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>