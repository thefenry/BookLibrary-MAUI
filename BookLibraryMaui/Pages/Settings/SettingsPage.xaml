<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookLibraryMaui.Pages.Settings.SettingsPage"
             Title="Settings">

    <FlexLayout Direction="Column" JustifyContent="SpaceBetween">
        <StackLayout Margin="10, 10">
            <Button x:Name="ExportButton" Text="Export Data" Margin="5, 10" Clicked="ExportButton_OnClicked" />
            <Button x:Name="ImportButton" Text="Import Data" Margin="5, 10" Clicked="ImportButton_OnClicked" />
        </StackLayout>
        <ProgressBar x:Name="MyProgressBar" IsVisible="True" Margin="20,5" />
    </FlexLayout>

</ContentPage>