<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:BookLibraryMaui.Models"
             x:Class="BookLibraryMaui.BookListPage"
             Title="My Books">
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Books}" x:Name="BookList">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Book">
                    <TextCell Text="{Binding Title}" Detail="{Binding Author}" TextColor="White" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>