<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:BookLibraryMaui.Models"
             x:Class="BookLibraryMaui.BookListPage"
             Title="My Books">
    
    <ContentPage.ToolbarItems >
        <ToolbarItem IconImageSource="{FontImageSource Glyph='arrow-down-wide-short', FontFamily='FaSolids', Size=22}"/>
        <ToolbarItem IconImageSource="{FontImageSource Glyph='search', FontFamily='FaSolids', Size=22}"/>
        <ToolbarItem IconImageSource="{FontImageSource Glyph='add', FontFamily='FaSolids', Size=22}" Clicked="Add_Clicked" />
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Books}" x:Name="BookList" ItemSelected="BookList_OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Book">
                    <TextCell Text="{Binding Title}" Detail="{Binding Author}" TextColor="White" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>