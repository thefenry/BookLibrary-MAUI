<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookLibraryMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookLibraryMaui"
    FlyoutBehavior="Disabled"
    Title="BookLibraryMaui">

    <TabBar>
        <Tab Title="Books" Icon="books_icon.png">
            <ShellContent ContentTemplate="{DataTemplate local:BookListPage}" />
        </Tab>
        <Tab Title="Movies" Icon="film_slate_icon.png" >
            <ShellContent ContentTemplate="{DataTemplate local:MovieListPage}" />
        </Tab>
        <Tab Title="Settings" Icon="settings_icon.png" >
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
